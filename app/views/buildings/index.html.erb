<h1>View all Buildings</h1>
<table>
  <tr>
    <td>Name </td>
    <td>Address </td>
    <td>Country </td>
    <td>Total Floors</td>
    <td>Num Floors Available</td>
    <td>Floors Available</td>
    <td>Floors Rented</td>
    <td>Rent/Floor</td>
  </tr>
  <tr>
    <% @buildings.each do |building| %>
    <tr>
      <td><%= building.name %></td>
      <td><%= building.address %></td>
      <td><%= building.country %></td>
      <td><%= building.number_of_floors %></td>
      <td><%= building.empty_offices %></td>
      <td><%= building.floors_available.join(", ") %></td>
      <td><%= building.floors_rented.join(", ") %></td>
      <td><%= building.rent_per_floor %></td>
      <td><%= link_to "View this Building", building_path(building) %></td>
      <td><%= link_to "Edit this Building" , edit_building_path(building) %></td>
    </tr>
    <% end %>
  </tr>
</table>
