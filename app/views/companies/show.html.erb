<h1>View a Company</h1>
<%= render partial: "companies/errors", locals: {user: @company} %>

<%= link_to "Edit this Company", edit_company_path(@company.id) %> 

<h3>Name: <%= @company.name %></h3>
<h3>Offices: </h3>
<% @company.office_info.each do |office_info| %>
  <%= office_info %><br>
<% end %>

<h3>Company's Total Rent: </h3>
<%= @company.total_rent %>

<h3>Add an Employee</h3>

<%= form_for @employee do |f| %>
  <div class="field">  
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

   <div class="field">  
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <%= f.hidden_field :company_id, value: @company.id %>
  <%= f.submit %>
<% end %>
<br>

<h3>Employees List: </h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    <% @company.employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td> 
        <td><%= employee.title %></td>
        <td><%= link_to "Delete Employee", employee_delete_path(employee.id), method: :delete, data: { confirm: "Really?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
