<h1>View all Companies</h1>
<table>
  <tr>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.id %></td>
      <td><%= link_to "View this Company", company_path(company) %> </td>
      <td><%= link_to "Edit this Company", edit_company_path(company) %> </td>
      <td><%= link_to "Delete this Company", company_path(company), method: :delete, data: { confirm: "Really?" } %> </td>
    </tr>
  <% end %>
  </tr>
</table>
<%= link_to "Add a new Company", new_company_path %>